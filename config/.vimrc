set nocompatible
set encoding=utf8

set nobackup
set novisualbell

set number
set ruler
set showcmd
set showmode
set showmatch
set matchtime=0

set hlsearch
set incsearch
set ignorecase
set smartcase

set expandtab
set autoindent
set smartindent
set backspace=indent,eol,start
set tabstop=2
set softtabstop=2
set shiftwidth=2

set list

syntax on
filetype on
filetype indent on
